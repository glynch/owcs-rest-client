<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="io.github" level="TRACE" />
    <logger name="net.sf.ehcache" level="OFF" />
    <logger name="org.testcontainers" level="OFF" />
    <logger name="org.springframework.http.converter" level="TRACE" />

</configuration>